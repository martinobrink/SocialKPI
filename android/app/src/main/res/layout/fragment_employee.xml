<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trifork.triforkemployee.ui.employee.EmployeeFragment">

    <TextView
        android:id="@+id/text_view_employee_initials"
        android:layout_margin="@dimen/margin_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_circle"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="JHE" />

    <TextView
        android:id="@+id/text_view_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_employee_initials"
        tools:text="JÃ¸rgen Heinsen"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/text_view_employee_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/employee_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/outline_chat_24"
        />

        <ImageView
            android:id="@+id/employee_call"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/employee_message"
            android:layout_margin="@dimen/margin_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/outline_call_24"
        />

        <ImageView
            android:id="@+id/employee_rocket"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/employee_call"
            android:layout_margin="@dimen/margin_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_rocket_chat"
        />

        <ImageView
            android:id="@+id/employee_zoom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/employee_rocket"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_zoom"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>