<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_margin="@dimen/margin_0">

    <TextView
        android:id="@+id/text_view_category_letters"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_circle"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="JHE" />

    <TextView
        android:id="@+id/text_view_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_0"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintStart_toEndOf="@+id/text_view_category_letters"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ugentlig lÃ¸betur" />

    <TextView
        android:id="@+id/text_view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_0"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        app:layout_constraintStart_toEndOf="@+id/text_view_category_letters"
        app:layout_constraintTop_toBottomOf="@+id/text_view_event_title"
        tools:text="Running" />

    <TextView
        android:id="@+id/text_view_time_of_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_0"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        app:layout_constraintStart_toEndOf="@+id/text_view_category_letters"
        app:layout_constraintTop_toBottomOf="@+id/text_view_category"
        tools:text="11.08.21" />

</androidx.constraintlayout.widget.ConstraintLayout>